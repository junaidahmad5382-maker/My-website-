    #contact { background: lightcoral; }

    .gallery img {
      width: 200px; height: 120px;
      margin: 10px; border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.3);
    }

    .social-icons img {
      width: 40px; height: 40px;
      margin: 10px; vertical-align: middle;
      transition: transform 0.3s;
    }
    .social-icons img:hover {
      transform: scale(1.2);
    }

    .whatsapp-btn {
      display: inline-block;
      background: #25D366;
      color: white;
      padding: 10px 20px;
      border-radius: 25px;
      text-decoration: none;
      font-weight: bold;
      margin-top: 20px;
      transition: background 0.3s;
    }
    .whatsapp-btn:hover {
      background: #1DA851;
